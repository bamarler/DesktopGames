{
    "name": "desktop-games",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.desktopgames.app",
        "mac": {
            "artifactName": "desktop-games-macos-latest",
            "target": "dmg"
        },
        "win": {
            "artifactName": "desktop-games-windows-latest",
            "target": "nsis"
        },
        "linux": {
            "artifactName": "desktop-games-ubuntu-latest",
            "target": "AppImage"
        },
        "files": [
            "installers/",
            "src/",
            "package.json",
            "main.js",
            "index.html"
        ]
    },
    "devDependencies": {
        "electron": "^31.0.0",
        "electron-builder": "^24.13.3"
    },
    "dependencies": {
        "sax": "^1.4.1"
    }
}
